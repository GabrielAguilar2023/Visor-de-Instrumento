<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Uno"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textoInfo"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/lista"
        app:layout_constraintTop_toBottomOf="@+id/datosGuardados" />

    <Button
        android:id="@+id/datosGuardados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:text="Datos Guardados"
        app:layout_constraintEnd_toStartOf="@+id/lista"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonBT" />

    <ImageButton
        android:id="@+id/botonBT"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="56dp"
        android:layout_height="58dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:background="@color/colorPrimaryDark"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/lista"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btoff" />

    <ListView
        android:id="@+id/lista"
        android:layout_width="361dp"
        android:layout_height="254dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        android:paddingBottom="30dp"
        android:paddingEnd="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>